generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("MIGRATE_DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum InterviewStatus {
  PENDING
  ACTIVE
  COMPLETED
  FAILED
  FEEDBACK_GENERATED
}

model User {
  id                      String    @id
  email                   String?   @unique
  name                    String?
  image                   String?
  role                    UserRole  @default(USER)
  credits                 Decimal   @default(3.00) @db.Decimal(10, 2)
  isPremium               Boolean   @default(false)
  resumeJobTitle          String?
  resumeSkills            String?   @db.Text
  resumeExperience        String?   @db.Text
  resumeEducation         String?   @db.Text
  resumeAchievements      String?   @db.Text
  resumeFileUrl           String?
  jobSearchStage          String?
  linkedinUrl             String?
  acceptedTermsAt         DateTime?
  acceptedPrivacyAt       DateTime?
  dataRetentionOverride   Boolean?  @default(false)
  stripeCustomerId        String?   @unique
  premiumSubscriptionId   String?   @unique
  premiumExpiresAt        DateTime?
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  // Relations
  interviewSessions       InterviewSession[]
  feedbacks               Feedback[]
  usageEvents             UsageEvent[]

  // Optimized indexes for common queries
  @@index([email])
  @@index([isPremium, credits])
  @@index([role])
  @@index([createdAt])
}

model InterviewSession {
  id                String    @id
  userId            String
  jobTitle          String
  resumeSnapshot    Json?     @db.JsonB
  company           String?
  interviewType     String?
  jdContext         String?   @db.Text
  webrtcSessionId   String?   @unique
  openaiSessionId   String?   @unique
  fallbackMode      Boolean   @default(false)
  startedAt         DateTime  @default(now())
  endedAt           DateTime?
  durationSeconds   Int?
  audioUrl          String?
  expiresAt         DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  user              User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  transcripts       Transcript[]
  feedback          Feedback?

  // Optimized indexes
  @@index([userId])
  @@index([createdAt])
  @@index([userId, createdAt])
  @@index([jobTitle])
  @@index([startedAt])
}

model Transcript {
  id         String   @id
  sessionId  String
  role       String
  content    String   @db.Text
  confidence Float?
  timestamp  DateTime
  expiresAt  DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  session    InterviewSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  // Optimized indexes
  @@index([sessionId])
  @@index([timestamp])
  @@index([sessionId, timestamp])
  @@index([role])
}

model Feedback {
  id                    String   @id
  sessionId             String   @unique
  userId                String
  summary               String   @db.Text
  strengths             String?  @db.Text
  areasForImprovement   String?  @db.Text
  fillerWordCount       Int?
  transcriptScore       Float?
  expiresAt             DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  session               InterviewSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user                  User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Optimized indexes
  @@index([userId])
  @@index([userId, createdAt])
  @@index([createdAt])
}

model UsageEvent {
  id         String   @id
  userId     String?
  eventType  String
  details    Json?    @db.JsonB
  occurredAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Optimized indexes
  @@index([userId])
  @@index([eventType])
  @@index([userId, eventType])
  @@index([occurredAt])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
/// IMPORTANT: This table appears to be legacy. Consider migrating to InterviewSession+Transcript+Feedback tables.
/// If RLS is causing performance issues, review and optimize the policies.
model interviews {
  id         BigInt    @id @default(autoincrement())
  user_id    String    @db.Uuid
  transcript String?   @db.Text
  feedback   Json?     @db.JsonB
  duration   Int?
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)

  // Optimized indexes
  @@index([user_id], map: "idx_interviews_user_id")
  @@index([created_at])
  @@index([user_id, created_at])
}